---

extends: default

rules:
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
  comments:
    # prettier compatibility
    min-spaces-from-content: 1
  comments-indentation: false
  document-start:
    present: true
  line-length:
    max: 140
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

...
